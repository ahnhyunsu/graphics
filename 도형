// Cquiz23View 그리기

CPoint pnt;
void Cquiz23View::OnDraw(CDC *pDC)
{
	Cquiz23Doc* pDoc = GetDocument();
	ASSERT_VALID(pDoc);
	if (!pDoc)
		return;
	// 삼각형 그리기
	POINT points[3]; // 삼각형의 꼭지점을 저장하기 위한 배열
	points[0].x = pnt.x;
	points[0].y = pnt.y - 100; // 첫 번째 꼭지점
	points[1].x = pnt.x + 100;
	points[1].y = pnt.y + 100; // 두 번째 꼭지점
	points[2].x = pnt.x - 100;
	points[2].y = pnt.y + 100; // 세 번째 꼭지점
	pDC->Polygon(points, 3); // 삼각형 그리기

	// 뒤집힌 삼각형 그리기
	POINT invertedTrianglePoints[3]; // 뒤집힌 삼각형의 꼭지점을 저장하기 위한 배열
	invertedTrianglePoints[0].x = pnt.x;
	invertedTrianglePoints[0].y = pnt.y + 80; // 첫 번째 꼭지점
	invertedTrianglePoints[1].x = pnt.x + 100;
	invertedTrianglePoints[1].y = pnt.y - 80; // 두 번째 꼭지점
	invertedTrianglePoints[2].x = pnt.x - 100;
	invertedTrianglePoints[2].y = pnt.y - 80; // 세 번째 꼭지점
	pDC->Polygon(invertedTrianglePoints, 3); // 뒤집힌 삼각형 그리기


	pDC->TextOutW(pnt.x - 30, pnt.y, L"Super Shy");
	// TODO: 여기에 원시 데이터에 대한 그리기 코드를 추가합니다.
}


